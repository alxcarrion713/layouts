<% content_for :left_column do %>


    <h1> All Users</h1>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Favorite Language</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |e| %>
            <tr>
                <td><%= e.first_name %></td>
                <td><%= e.last_name %></td>
                <td><%= e.favorite_language %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <% end %>
    
    <% content_for :right_column do %>
    <h1> New User</h1>
    <% if flash[:error] %>
        <p><%= flash[:error] %></p>
        <% end %>
    <form action="/" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>First Name:</p>
        <p>
            <input type="text" name="user[first_name]">
        </p>
        <p>Last Name:</p>
        <p>
            <input type="text" name="user[last_name]">
        </p>
        <p>Favorite Language</p>
        <p>
            <input type="text" name="user[favorite_language]">
        </p>
        <p>
            <button>Submit</button>
        </p>
    </form>
    <form action="/posts">
        <button>All Posts</button>
    </form>
    <% end %>