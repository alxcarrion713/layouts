<% content_for :left_column do %>
    <h1>All Posts</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |p| %>
            <tr>
                <td><%= p.title %></td>
                <td><%= p.content %></td>
                <td><%= p.user.first_name %> <%= p.user.last_name %></td>
            </tr>
            <%end%>
        </tbody>
    </table>
    
    <% end %>
    
    
    
    
    <% content_for :middle_column do %>
    <h1>New Post</h1>
    <% if flash[:error] %>
    <p><%= flash[:error] %></p>
    <%end%>
    <form action="/posts" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>Title</p>
        <p><input type="text" name="post[title]"></p>
        <p>Content</p>
        <p><textarea rows="4" cols="50" name="post[content]"></textarea></p>
        <select name="post[user_id]">
            <% @user.each do |u| %>
            <option value='<%= u.id %>'><%= u.first_name %> <%= u.last_name%></option>
            <% end %>
        </select>
        <button>Submit</button>
    </form>
    <% end %>
    
    
    
    
    <% content_for :right_column do %>
    <h1>Top of right column</h1>
    <form action="/">
        <button>All Users</button>
    </form>
    <% end %>